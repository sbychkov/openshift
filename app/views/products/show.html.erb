<div class="container">
<div class="row">
<div class="thumbnail">
<h2><%= @product.name %></h2>

<% if @product.default_image %>
    <%= image_tag @product.default_image.path, :width => '200px', :style => "float:right" %>
<% end %>

<p><%= @product.short_description %></p>
<p>
  <b class="pull-right"><%= number_to_currency @product.price %></b>
  <%= link_to "Add to basket", product_path(@product.permalink), :method => :post, class: "btn btn-xl" %>
</p>

<hr>
<%= simple_format @product.description %>
<hr>

<p><%= link_to "Back to list", shop_path, class: "btn btn-xl" %></p>
</div>
</div>
</div>